<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">

   <Dialog id="filterDialog" contentHeight="25rem" showHeader="false" contentWidth="20rem">
      <content>
         <NavContainer id="filterNav">

            <!-- Page 1 : Main Settings -->
            <Page id="pageMain">
               <customHeader>
                  <Bar>
                     <contentMiddle>
                        <Title text="View Settings"/>
                     </contentMiddle>
                     <contentRight>
                        <Button text="Reset" type="Transparent" press=".onResetAll"/>
                     </contentRight>
                  </Bar>
               </customHeader>

               <content>
                  <List headerText="Filter By">
                     <items>
                        <StandardListItem 
                           title="Orders" 
                           type="Active" 
                           press=".onOrdersPress"/>
                     </items>
                  </List>

                  <List headerText="Group By">
                     <items>
                        <StandardListItem 
                           title="Group Settings" 
                           type="Active" 
                           press=".onGroupPress"/>
                     </items>
                  </List>
               </content>
            </Page>

            <!-- Page 2 : Orders Sub-Filter -->
            <Page id="pageOrders" showNavButton="true" navButtonPress=".onNavBack">
               <customHeader>
                  <Bar>
                     <contentLeft>
                        <Button icon="sap-icon://nav-back" press=".onNavBack"/>
                     </contentLeft>
                     <contentMiddle>
                        <Title text="Filter By: Orders"/>
                     </contentMiddle>
                     <contentRight>
                        <Button id="resetBtnOrders" text="Reset" type="Transparent" press=".onResetOrders"/>
                     </contentRight>
                  </Bar>
               </customHeader>

               <subHeader>
                  <Bar>
                     <contentMiddle>
                        <SearchField width="100%" liveChange=".onSearchOrders"/>
                     </contentMiddle>
                  </Bar>
               </subHeader>

               <content>
                  <List id="ordersList" mode="SingleSelect">
                     <items>
                        <StandardListItem title="Only Shipped Orders"/>
                        <StandardListItem title="Only Orders without Shipment"/>
                     </items>
                  </List>
               </content>
            </Page>

            <!-- Page 3 : Group Settings -->
            <Page id="pageGroup" showNavButton="true" navButtonPress=".onNavBack">
               <customHeader>
                  <Bar>
                     <contentLeft>
                        <Button icon="sap-icon://nav-back" press=".onNavBack"/>
                     </contentLeft>
                     <contentMiddle>
                        <Title text="Group Settings"/>
                     </contentMiddle>
                     <contentRight>
                        <Button text="Reset" type="Transparent" press=".onResetGroup"/>
                     </contentRight>
                  </Bar>
               </customHeader>

               <content>
                  <VBox class="sapUiSmallMargin">
                     <Label text="Group Order"/>
                     <RadioButtonGroup id="groupOrder" selectedIndex="0">
                        <buttons>
                           <RadioButton text="Ascending"/>
                           <RadioButton text="Descending"/>
                        </buttons>
                     </RadioButtonGroup>

                     <Label text="Group By" class="sapUiSmallMarginTop"/>
                     <RadioButtonGroup id="groupBy" selectedIndex="3">
                        <buttons>
                           <RadioButton text="ShipCity"/>
                           <RadioButton text="ShipCountry"/>
                           <RadioButton text="ShippedDate"/>
                           <RadioButton text="(Not Grouped)"/>
                        </buttons>
                     </RadioButtonGroup>
                  </VBox>
               </content>
            </Page>

         </NavContainer>
      </content>

      <beginButton>
         <Button text="OK" type="Emphasized" press=".onConfirmSettings"/>
      </beginButton>
      <endButton>
         <Button text="Cancel" press=".onCloseDialog"/>
      </endButton>

   </Dialog>

</core:FragmentDefinition>
