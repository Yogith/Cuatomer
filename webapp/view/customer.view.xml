<mvc:View controllerName="customer.controller.customer"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="orderPage"
    title="Orders" >
    <subHeader>
    <Toolbar >
				<SearchField width="20%"  liveChange=".onSearch" showRefreshButton="true" />
                <ToolbarSpacer ></ToolbarSpacer>
                <Button  press=".onOpenDialog" icon="sap-icon://filter"></Button>
                <Button press=".onOpenDialog" icon="sap-icon://group-2"></Button>
			</Toolbar>
        
    </subHeader>
      <List id="Order" items="{/Orders}" updateFinished=".onUpdateFinished">
     <CustomListItem type="Navigation" press=".onItemPress">
     <HBox class="sapUiSmallMargin" justifyContent="SpaceBetween">
     <VBox >
     <Title text="Orderid:{OrderID}"></Title>
     <Text text="{ShipCity}"></Text>
     <Text text="{ShipCountry}"></Text>
     <Text text="ShippedDate:{path:'ShippedDate', formatter:'.formatDate'}"></Text>
     </VBox>
     
     <VBox >
     <Text text="OrderDate:{path:'OrderDate', formatter:'.formatDate' }" ></Text>
     <Text text="RequiredDate:{path:'RequiredDate', formatter:'.formatDate' }" ></Text>
    <ObjectStatus id="shippingstatus"  text="{parts:[{path:'RequiredDate'},{path:'ShippedDate'}], formatter:'.progress'}" state="{parts:[{path:'RequiredDate'},{path:'ShippedDate'}], formatter:'.progresstate'}" ></ObjectStatus>
     </VBox>
     </HBox>
      </CustomListItem>
      </List>
    </Page>
</mvc:View>