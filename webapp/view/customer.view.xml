<mvc:View controllerName="customer.controller.customer"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page title="Orders">
    <subHeader>
    <Toolbar >
				<SearchField width="20%"  liveChange=".onSearch" showRefreshButton="true" />
                <ToolbarSpacer ></ToolbarSpacer>
                <Button  press=".onOpenDialog" icon="sap-icon://filter"></Button>
                <Button press=".onOpenDialog" icon="sap-icon://group-2"></Button>
			</Toolbar>
        
    </subHeader>
      <List id="Order" items="{/Orders}" >
     <CustomListItem>
     <HBox class="sapUiSmallMargin" justifyContent="SpaceBetween">
     <VBox >
     <Title text="ShipName:{ShipName}"></Title>
     <Text text="ShipCity:{ShipCity}"></Text>
     <Text text="ShipCountry:{ShipCountry}"></Text>
     </VBox>
     
     <VBox >
     <Title text="ShippedDate:{path:'ShippedDate', formatter:'.formatDate'}"></Title>
     <Text text="OrderDate:{path:'OrderDate', formatter:'.formatDate' }" ></Text>
     <!-- <Text text="RequiredDate:{path:'RequiredDate', formatter:'.formatDate' }" ></Text> -->
    <ObjectStatus id="shippingstatus" text="{parts:[{path:'RequiredDate'},{path:'ShippedDate'}], formatter:'.progress'}" ></ObjectStatus>
    <!-- state="{parts:[{path:'RequiredDate'},{path:'ShippedDate'}], formatter:'.progresstate'}" -->
     </VBox>
     </HBox>
      </CustomListItem>
      </List>
    </Page>
</mvc:View>